rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check if user is authenticated (Admin)
    function isAdmin() {
      return request.auth != null;
    }

    // Gallery: Public Read, Admin Write
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Courses: Public Read, Admin Write
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Enquiries: Public Create, Admin Read/Delete
    match /enquiries/{enquiryId} {
      allow create: if true;
      allow read, delete: if isAdmin();
      allow update: if false;
    }

    // Management: Public Read, Admin Write
    match /management/{memberId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Team: Public Read, Admin Write
    match /team/{memberId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings (Stats): Public Read, Admin Write
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Security Logs: Admin Read/Write
    match /security_logs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}
